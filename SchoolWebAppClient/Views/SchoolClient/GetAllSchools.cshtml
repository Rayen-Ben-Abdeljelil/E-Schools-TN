@model IEnumerable<SchoolWebAppClient.Models.SchoolClient>

@{
    ViewData["Title"] = "Liste des écoles";
}

<div class="text-center mb-5">
    <h1 class="display-5 text-primary fw-bold">Annuaire des Écoles d'Ingénieurs</h1>
    <p class="lead text-muted">Trouvez toutes les informations clés en un coup d'œil.</p>
    <hr class="w-50 mx-auto" />
</div>

<p>
    <a asp-action="CreateSchool" class="btn btn-success btn-lg shadow-sm">
        <i class="fas fa-plus-circle"></i> Créer une nouvelle école
    </a>
</p>

<div class="card p-3 mb-4 shadow-sm">
    <form asp-action="GetSchoolByName" method="get">
        <div class="row g-3 align-items-center">
            <div class="col-md-5">
                <input type="text" name="name" class="form-control" placeholder="Rechercher une école par nom..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </div>
        </div>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="bg-primary text-white">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Sections)</th>
                    <th>@Html.DisplayNameFor(model => model.Director)</th>
                    <th>@Html.DisplayNameFor(model => model.Rating)</th>
                    <th>@Html.DisplayNameFor(model => model.WebSite)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</span></td>
                        <td class="text-wrap">@Html.DisplayFor(modelItem => item.Sections)</td>
                        <td>@Html.DisplayFor(modelItem => item.Director)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                            <i class="fas fa-star text-warning"></i>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.WebSite))
                            {
                                <a href="@item.WebSite" target="_blank" class="text-info">Visiter</a>
                            }
                            else
                            {
                                <span class="badge bg-secondary">-</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="GetSchoolById" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="EditSchool" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="DeleteSchool" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info shadow-sm">
        <h4 class="alert-heading">Aucune école trouvée</h4>
        <p>Veuillez vérifier votre connexion à l'API ou utiliser le bouton "Créer une nouvelle école" pour ajouter des données.</p>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        <strong>Erreur :</strong> @ViewBag.ErrorMessage
    </div>
}