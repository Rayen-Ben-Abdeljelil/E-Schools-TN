@model IEnumerable<SchoolWebAppClient.Models.SchoolClient>

@{
    ViewData["Title"] = "Résultats de recherche";
}

<h1>Résultats de recherche</h1>

@if (ViewBag.SearchName != null)
{
    <p>Recherche pour : <strong>@ViewBag.SearchName</strong></p>
}

<form asp-action="GetSchoolByName" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="name" class="form-control" placeholder="Rechercher par nom..." value="@ViewBag.SearchName" />
                <button type="submit" class="btn btn-secondary">Rechercher</button>
                <a asp-action="GetAllSchools" class="btn btn-outline-secondary">Tout afficher</a>
            </div>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Sections)</th>
                <th>@Html.DisplayNameFor(model => model.Director)</th>
                <th>@Html.DisplayNameFor(model => model.Rating)</th>
                <th>@Html.DisplayNameFor(model => model.WebSite)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sections)</td>
                    <td>@Html.DisplayFor(modelItem => item.Director)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.WebSite))
                        {
                            <a href="@item.WebSite" target="_blank">@item.WebSite</a>
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                    <td>
                        <a asp-action="GetSchoolById" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                        <a asp-action="EditSchool" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                        <a asp-action="DeleteSchool" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>Aucune école trouvée pour cette recherche.</p>
        <a asp-action="GetAllSchools" class="btn btn-primary">Retour à la liste complète</a>
    </div>
}